<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users Data</title>
    <link rel="stylesheet" href="/static/navbar.css" />
    <link rel="stylesheet" href="/static/medianav.css" />
    <link rel="stylesheet" href="/static/umum.css" />
    <link rel="stylesheet" href="/static/table.css" />
  </head>
  <body>
    <nav class="navbar">
      <a href="#" class="navbar-logo">yuu<span id="m">goo</span></a>

      <div class="navbar-nav">
        <ul>
          <a href="#home">Home</a>
          <a href="./menu.html">Menu</a>
          <a href="#unggulan">Product</a>
          <a href="#about">Tentang Kami</a>
        </ul>
      </div>

      <div class="navbar-extra">
        <a href="#" id="menu"
          ><i><img src="/static/list.svg" alt="" class="listbar" /></i
        ></a>
      </div>
    </nav>
    <div class="divheader">
      <h1>User List</h1>
    </div>
    <section class="page_addusers">
      <h1>Users</h1>
      <form action="/users/create" method="POST">
        <input type="text" name="name" placeholder="Name" required />
        <input type="text" name="username" placeholder="Username" required />
        <input type="password" name="password" placeholder="Password" />
        <input type="text" name="email" placeholder="Email" required />
        <button type="submit">Add User</button>
      </form>
    </section>

    <section class="page_tableusers">
      <h1>User List</h1>
      <ul>
        <% users.forEach(user => { %>
        <li>
          <%= user.name %> - <%= user.email %>
          <form action="/users/delete/<%= user.id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
          <a href="/users/edit/<%= user.id %>">Edit</a>
        </li>
        <% }) %>
      </ul>
    </section>

    <section class="s-table1">
      <table class="container-table">
        <thead class="thead">
          <tr class="thtr">
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="tbody">
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td class="action">
              <form action="/users/delete/<%= user.id %>" method="POST">
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this Category')"
                >
                  Delete
                </button>
              </form>
              <a href="/users/edit/<%= user.id %>">Edit</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <script src="/static/jsnav.js"></script>
  </body>
</html>
